<div class="row row-no-margin banner-wrapper">
  {% if section.settings.image_1 %}
    {% if section.settings.url_image_1 %}
      <a class="col-md-4 container-img p-relative" href={{ section.settings.url_image_1 }}>
        <img src={{ section.settings.image_1 | image_url }} alt={{ section.settings.alt_image_1 }} />
        {% if section.settings.heading_image_1 %}
          <h2>{{ section.settings.heading_image_1 }}</h2>
        {% endif %}
      </a>
    {% else %}
      <div class="col-md-4 container-img p-relative">
