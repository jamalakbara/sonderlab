{% stylesheet %}
  .p-relative h2{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    text-align: center;
  }
  .p-relative{
    position: relative;
  }
  .container-img{
    padding: 0;
    width: 100%;
    /* height: 100%; */
  }
  .container-img img{
    object-fit: cover;
    object-position: center;
    width: 100%;
    height: 100%;
  }
{% endstylesheet %}

